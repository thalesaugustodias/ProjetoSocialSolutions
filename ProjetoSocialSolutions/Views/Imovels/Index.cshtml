@model IEnumerable<ProjetoSocialSolutions.Models.Imovel>

@{
    ViewData["Title"] = "Imóveis";
}

<style>
    h2 {
        margin-top: 30px;
        text-align: center;
        font-weight: bold;
    }

    .botao {
        border-radius: 7px;
    }
</style>

<h2>Imóveis</h2>

<p>
    <a asp-action="Create" class="btn btn-success botao">Inserir Novo Imóvel</a>
</p>
<table style="font-size: 13px;" class="table table-striped table-hover">
    <thead>
        <tr class="alert-success">
            <th>
                @Html.DisplayNameFor(model => model.TipoImovel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoImovel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.ImovelId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.ImovelId">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.ImovelId">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
