@model IEnumerable<ProjetoSocialSolutions.Models.Clientes>
@using ProjetoSocialSolutions.Models

@{
    ViewData["Title"] = "Clientes";
}


<style>

    h2 {
        margin-top:30px;
        text-align:center;
        font-weight: bold;
    }
    .botao {
        border-radius: 7px;
    }
    
    
</style>

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-success botao">Inserir Novo Cliente</a>
</p>
<table style="font-size: 13px;" class="table table-striped table-hover">
    <thead>
        <tr class="alert-success">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imovel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr >
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(model => item.Imovel.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
